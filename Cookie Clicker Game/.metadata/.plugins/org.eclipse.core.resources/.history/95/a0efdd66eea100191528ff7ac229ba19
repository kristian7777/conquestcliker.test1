//Exercise 4
import java.util.Scanner;

public class MyConditions {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in);
		System.out.println("Enter a name ");
		String line=input.nextLine();
		System.out.println("Enter a last name ");
		String line2=input.nextLine();
		System.out.println(line+" "+ line2);
		
		System.out.println("Enter a num ");
		int num1=input.nextInt();
		System.out.println("Enter a num2 ");
		int num2=input.nextInt();
		
		System.out.println("total is "+(num1+num2));
		
		System.out.println("Enter a dub ");
		double dub1=input.nextInt();
		System.out.println("Enter a dub2 ");
		double dub2=input.nextInt();
		
		System.out.println("total is "+(dub1+dub2));
	
}
}